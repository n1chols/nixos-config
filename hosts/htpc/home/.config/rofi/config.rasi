configuration {
    show-icons: true;
}

* {
    background-color: rgb(36, 36, 36);
    text-color: rgb(255, 255, 255);
}

window {
    border: 1px solid rgb(48, 48, 48);
    border-radius: 12px;
    width: 600px;
}

mainbox {
    padding: 12px;
}

listview {
    padding: 8px 0;
}

element {
    padding: 4px;
}

element selected {
    background-color: rgb(120, 174, 237);
    text-color: rgb(255, 255, 255);
}

inputbar {
    padding: 8px;
}
