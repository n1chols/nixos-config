{
  // GENERAL
  "layer": "top",
  "position": "top",
  "height": 32,
  "spacing": 4,

  // LAYOUT
  "modules-left": [
    "hyprland/workspaces"
  ], 
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "custom/reboot",
    "custom/poweroff"
  ],

  // MODULES
  "clock": {
    "format": "{:%a %b %d  %I:%M %p}"
  },
  "custom/reboot": {
    "format": "",
    "on-click": "systemctl reboot"
  },
  "custom/poweroff": {
    "format": "",
    "on-click": "systemctl poweroff"
  }
}
