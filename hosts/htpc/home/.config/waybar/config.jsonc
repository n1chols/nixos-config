{
  // POSITION
  "layer": "top",
  "position": "top",
  "height": 30,

  // LAYOUT
  "modules-left": [
    "hyprland/workspaces"
  ],
  "modules-center": [
    "wlr/taskbar"
  ],
  "modules-right": [
    "tray",
    "clock"
  ],

  // MODULES
  "tray": {
    "icon-size": 13,
    "spacing": 10
  },
  "clock": {
    "interval": 1,
    "format": "<b>{:%H:%M:%S}</b>",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
  }
}
